{
	"manifest_version": 3,
	"name": "Remilia Shoutbox (Pictochat Replacer)",
	"version": "1.4.0",
	"description": "Supabase-powered shoutbox for remilia.com with guest or X login.",
	"action": {
		"default_title": "Remilia Shoutbox"
	},
	"permissions": ["activeTab", "storage", "scripting"],
	"host_permissions": ["https://remilia.com/*", "https://*.supabase.co/*"],
	"content_scripts": [
		{
			"matches": ["https://remilia.com/*"],
			"js": ["content.js"],
			"css": ["style.css"]
		}
	],
	"web_accessible_resources": [
		{
			"resources": ["supabase.min.js", "shoutboxCore.js"],
			"matches": ["<all_urls>"]
		}
	],
	"icons": {
		"16": "icons/icon16.png",
		"48": "icons/icon48.png",
		"128": "icons/icon128.png"
	}
}
