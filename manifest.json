{
  "manifest_version": 3,
  "name": "Remilia Shoutbox (Pictochat Replacer)",
  "version": "1.3.0",
  "description": "Replaces the Pictochat tab on remilia.com with a Supabase-powered shoutbox. Supports X login or guest mode, logout, and auto-prunes messages to 200.",
  "permissions": [
    "activeTab",
    "storage",
    "scripting"
  ],
  "host_permissions": [
    "https://remilia.com/*",
    "https://*.supabase.co/*"
  ],
  "content_scripts": [
    {
      "matches": [
        "https://remilia.com/*"
      ],
      "js": [
        "content.js"
      ],
      "css": [
        "style.css"
      ]
    }
  ],
  "web_accessible_resources": [
    {
      "resources": [
        "supabase.min.js"
      ],
      "matches": [
        "<all_urls>"
      ]
    }
  ],
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}